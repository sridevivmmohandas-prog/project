import os
from PIL import Image

# Dummy function to simulate image generation
def generate_image_variations(logo_path, product_path, output_dir="output"):
    os.makedirs(output_dir, exist_ok=True)
    for i in range(1, 11):
        img = Image.open(product_path)
        img.save(f"{output_dir}/creative_{i}.png")
    print("Generated 10 image variations!")

# Dummy function to simulate caption generation
def generate_captions():
    return [f"Ad caption {i}" for i in range(1, 11)]

if __name__ == "__main__":
    logo_path = "assets/logo.png"
    product_path = "assets/product.png"
    generate_image_variations(logo_path, product_path)
    captions = generate_captions()
    print("Captions:", captions)
